                <!--<bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>-->
                <!--<bean class="org.springframework.http.converter.xml.Jaxb2RootElementHttpMessageConverter"/>-->
            <!--</list>-->
        <!--</property>-->
    <!--</bean>-->
</beans>